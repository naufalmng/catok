<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="325dp"
    android:backgroundTint="@color/orange"
    app:cardPreventCornerOverlap="false"
    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut"
    tools:context=".ui.beranda.produk.insert.InsertProdukDialog">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/white"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:text="@string/tambah_produk"
                style="@style/MediumTextStyle"
                android:textAlignment="center"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_baseline_close_24"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="top"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@drawable/edittext_stroke_selector"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:textColor="@color/orange"
                    style="@style/RegularTextStyle"
                    android:textSize="@dimen/_13ssp"
                    android:inputType="number"
                    android:hint="Barcode"
                    android:gravity="top"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_weight="2"
                android:layout_marginEnd="8dp"
                app:cornerRadius="10dp"
                android:textSize="@dimen/_14ssp"
                android:includeFontPadding="false"
                android:text="@string/scan"
                android:layout_gravity="center"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@drawable/edittext_stroke_selector"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNamaProduk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:textColor="@color/orange"
                style="@style/RegularTextStyle"
                android:textSize="@dimen/_13ssp"
                android:inputType="text"
                android:hint="Nama Produk"
                android:gravity="top" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@drawable/edittext_stroke_selector"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:textColor="@color/orange"
                style="@style/RegularTextStyle"
                android:textSize="@dimen/_13ssp"
                android:inputType="text"
                android:hint="Deskripsi"
                android:gravity="top" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="top"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@drawable/edittext_stroke_selector"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHargaBeli"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:textColor="@color/orange"
                    style="@style/RegularTextStyle"
                    android:textSize="@dimen/_13ssp"
                    android:inputType="number"
                    android:hint="@string/harga_beli"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="top"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@drawable/edittext_stroke_selector"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHargaJual"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:textColor="@color/orange"
                    style="@style/RegularTextStyle"
                    android:textSize="@dimen/_13ssp"
                    android:inputType="number"
                    android:hint="@string/harga_jual"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@drawable/edittext_stroke_selector"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSatuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:textColor="@color/orange"
                style="@style/RegularTextStyle"
                android:textSize="@dimen/_13ssp"
                android:inputType="number"
                android:hint="@string/satuan"
                android:gravity="top" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@drawable/edittext_stroke_selector"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStokAwal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:textColor="@color/orange"
                style="@style/RegularTextStyle"
                android:textSize="@dimen/_13ssp"
                android:inputType="number"
                android:hint="@string/stok_awal"
                android:gravity="top" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:textColor="@color/orange"
            android:clickable="false"
            style="@style/RegularTextStyle"
            android:textSize="@dimen/_13ssp"
            android:background="@drawable/rectangle_4r"
            android:inputType="number"
            android:text="Senin, 20 Oktober 2022"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBatal"
                android:layout_width="wrap_content"
                app:elevation="0dp"
                android:elevation="0dp"
                android:shadowColor="@android:color/transparent"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1.3"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                android:text="@string/batal"
                android:backgroundTint="@color/abuB"
                android:textSize="@dimen/_15ssp"
                android:foregroundTint="@android:color/transparent"
                app:rippleColor="@android:color/transparent"
                style="@style/SemiboldTextStyle"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSimpan"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:shadowColor="@android:color/transparent"
                app:rippleColor="@android:color/transparent"
                android:foregroundTint="@android:color/transparent"
                android:layout_weight="1"
                app:elevation="0dp"
                android:elevation="0dp"
                app:cornerRadius="10dp"
                android:textColor="@color/white"
                android:text="@string/simpan"
                android:textSize="@dimen/_15ssp"
                android:layout_marginStart="8dp"
                style="@style/SemiboldTextStyle"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>