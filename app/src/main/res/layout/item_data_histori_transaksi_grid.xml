<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_selector"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tanggal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="-3dp"
        android:text="07 November 2022 15.02"
        android:textColor="@color/orange"
        style="@style/BoldTextStyle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/tanggal"
        app:layout_constraintStart_toStartOf="@id/tanggal"
        app:layout_constraintTop_toBottomOf="@id/tanggal"
        android:text="@string/total_arg"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="@dimen/_14ssp"
        style="@style/MediumTextStyle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/invoice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/tanggal"
        app:layout_constraintTop_toBottomOf="@id/total"
        app:layout_constraintStart_toStartOf="@id/total"
        android:text="201120221"
        android:textColor="@color/orange"
        android:textSize="@dimen/_10ssp"
        style="@style/MediumTextStyle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/jenisPembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/invoice"
        app:layout_constraintStart_toStartOf="@id/invoice"
        android:text="@string/jenis_pembayaran_arg"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="@dimen/_14ssp"
        style="@style/MediumTextStyle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/statusBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/jenisPembayaran"
        app:layout_constraintTop_toBottomOf="@id/jenisPembayaran"
        android:text="(LUNAS)"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="@dimen/_10ssp"
        style="@style/MediumTextStyle"/>

